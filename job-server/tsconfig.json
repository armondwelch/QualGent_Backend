{
  "compilerOptions": {
    "target": "ES2017",                  // or ES2015 or higher
    "module": "commonjs",
    "esModuleInterop": true,             // needed for default imports
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "skipLibCheck": true,                // skip type errors in node_modules
    "resolveJsonModule": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "lib": ["ES2017", "DOM"],            // includes modern JS features
    "outDir": "dist"
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
